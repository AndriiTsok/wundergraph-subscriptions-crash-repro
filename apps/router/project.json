{
    "name": "router",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/router",
    "projectType": "application",
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "rm -rf dist/apps/router",
            "mkdir -p dist/apps/router",
            "npx wgc router compose -i apps/router/supergraph.config.yaml -o dist/apps/router/config.json",
            "cp apps/router/router.yaml dist/apps/router/router.yaml"
          ],
          "parallel": false
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "ROUTER_CONFIG_PATH=/workspaces/wundergraph-subscriptions-crash-repro/dist/apps/router/config.json CONFIG_PATH=/workspaces/wundergraph-subscriptions-crash-repro/dist/apps/router/router.yaml tmp/wondergraph/router"
          ],
          "parallel": false
        },
        "dependsOn": ["build"]
      }
    },
    "tags": ["graphql"]
  }
  